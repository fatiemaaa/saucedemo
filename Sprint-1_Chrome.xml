<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Sprint-1 using Chrome">
    <test verbose="2" preserve-order="true" name="Login to SwagLabs with valid credientials on Chrome">
        <parameter name="browsername" value=""/>
        <classes>
            <class name="testcases.TC01_Login">
                <methods>
                    <include name="LoginWithValidUserNameAndPassword"/>
                </methods>
            </class>
            <class name="testcases.TC02_Products">
                <methods>
                    <include name="ProductAddToCart"/>
                </methods>
            </class>
            <class name="testcases.TC03_Cart">
                <methods>
                    <include name="ClickOnCheckOutButton"/>
                </methods>
            </class>
            <class name="testcases.TC04_CheckOut">
                <methods>
                    <include name="FillingOutYourInformation"/>
                </methods>
            </class>
            <class name="testcases.TC05_Payment">
                <methods>
                    <include name="ClickOnFinishBtn"/>
                </methods>
            </class>

        </classes>
    </test>
</suite>